<h1>Register</h1>
<%- include ('./partials/messages') %>
<form actin='/users/register' method="POST">
<div>
    <lable for="name">Name</lable>
    <input
        type = "name"
        name = "name"
        placeholder="Enter Name"
        value = "<%= typeof name != 'undefined' ? name:''%>"
    />
</div>
<div>
    <lable for="password">Password</lable>
    <input
        type = "password"
        name = "password"
        placeholder="Enter Password"
        value = "<%= typeof password != 'undefined' ? name:''%>"
    />
</div>
<div>
    <lable for="password2">Confirm Password</lable>
    <input
        type = "password"
        name = "password2"
        placeholder="Enter Password"
        value = "<%= typeof password2 != 'undefined' ? name:''%>"
    />
</div>
<button type="submit" class="btn btn-primary btn-block">
    Register
</button>
</form>
<p> Have an Account?<a href="/users/login">Login</a></p>
